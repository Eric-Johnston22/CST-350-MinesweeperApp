@model Minesweeper.Models.PlayerModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/loginstyle.css" />
</head>

<div class="text-center text-light">
    <h1>Login</h1>
    <img src="~/img/Main.jpg" alt="Minesweeper Gameboard" />
</div>

<hr />

@if(ViewBag.error==true)
{
    <h1 class="text-center text-danger">Your username or password was not valid.</h1>
}

@if (ViewBag.registered == true)
{
    <h1 class="text-success bg-dark">Congratulations on a successful player registration.</h1>
}
<h1></h1>
<div class="row justify-content-center text-light">
    <div class="col-md-4">
        <form asp-action="LoginSubmit" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
